<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/frontscreen_gradient"
    tools:context=".Fragments.Home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="8dp"
                android:weightSum="5"
                android:background="@drawable/edit_background"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:background="@android:color/transparent"
                    android:padding="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:hint="Search"
                    android:layout_weight="4.2"
                    android:id="@+id/search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:id="@+id/search_button"
                    android:src="@drawable/search"
                    android:background="#FFF"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"/>


            </LinearLayout>
            <LinearLayout
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    app:cardCornerRadius="8dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="right"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="5"
                        app:sliderStartAutoCycle="true" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@drawable/pic_one"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"/>


                <LinearLayout
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/stationary"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/frontscreen_books_clipart"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:textColor="#D54545"
                                android:textSize="20sp"
                                android:fontFamily="@font/textfont1"
                                android:text="Stationary"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/snacks"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="150dp"
                            android:layout_height="150dp">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:background="@drawable/snacks_final"
                                android:layout_width="130dp"
                                android:layout_height="100dp" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:textColor="#D54545"
                                android:textSize="20sp"
                                android:fontFamily="@font/textfont1"
                                android:text="Snacks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="8dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fruits"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:background="@drawable/fruits_final"
                                android:layout_width="120dp"
                                android:layout_height="100dp" />
                            <TextView
                                android:layout_marginTop="5dp"
                                android:layout_gravity="center"
                                android:textColor="#D54545"
                                android:textSize="20sp"
                                android:fontFamily="@font/textfont1"
                                android:text="Fruits"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/dairy"
                        android:layout_weight="1"
                        app:cardCornerRadius="20dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="150dp"
                        android:layout_height="150dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:background="@drawable/frontscreen_dairy_clipart"
                                android:layout_width="100dp"
                                android:layout_height="100dp" />
                            <TextView
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:textColor="#D54545"
                                android:textSize="20sp"
                                android:fontFamily="@font/textfont1"
                                android:text="Dairy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>



    </ScrollView>





</FrameLayout>