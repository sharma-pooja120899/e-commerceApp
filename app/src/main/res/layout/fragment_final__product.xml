<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Final_Product">

    <LinearLayout
        android:orientation="vertical"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#FFF"
                    android:elevation="10dp"
                    android:outlineSpotShadowColor="#000">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:weightSum="2"
                            android:layout_height="300dp"
                            android:orientation="vertical"
                            android:layout_margin="15dp"
                            android:id="@+id/viewpagerlinear"
                            android:background="#FFF">

                            <androidx.viewpager.widget.ViewPager
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/viewitemangle">

                            </androidx.viewpager.widget.ViewPager>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_marginTop="290dp"
                                android:layout_height="10dp"
                                android:id="@+id/lineardots"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center_horizontal">

                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/company_name"
                            android:text="---"
                            android:textSize="20sp"
                            android:textColor="#000"
                            android:fontFamily="@font/textfont1"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_name"
                            android:text="----"
                            android:textSize="20sp"
                            android:padding="2dp"
                            android:fontFamily="@font/textfont1"
                            android:textStyle="bold"
                            android:layout_marginStart="10dp"
                            />

                       <LinearLayout
                           android:layout_marginStart="10dp"
                           android:orientation="horizontal"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/markPrice"
                               android:text="----"
                               android:padding="2dp"
                               android:textSize="15sp"
                               android:fontFamily="@font/textfont1"
                               android:textStyle="bold"
                               android:layout_marginStart="10dp"
                               />

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:id="@+id/sellPrice"
                               android:text="----"
                               android:padding="2dp"
                               android:textSize="20sp"
                               android:fontFamily="@font/textfont1"
                               android:textStyle="bold"
                               />

                       </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardElevation="10dp"
                    android:layout_marginTop="2dp"
                    android:outlineSpotShadowColor="#000">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:padding="3dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="3dp"
                                android:background="@drawable/spinner_bg"
                                android:orientation="horizontal">

                                <Spinner
                                    android:id="@+id/size"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/spinner_dropdown_icon" />

                            </RelativeLayout>



                        </LinearLayout>

                        <Button

                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:background="#FFF"
                            android:text="Size Chart"
                            android:textColor="#000"
                            android:textAllCaps="false"
                            android:fontFamily="@font/textfont1"
                            android:drawableStart="@drawable/size_chart"
                            android:drawablePadding="5dp"
                            android:id="@+id/size_chart"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:elevation="10dp"
                    app:cardElevation="10dp"
                    android:outlineSpotShadowColor="#000"
                    android:layout_marginBottom="2dp"
                    android:background="#FFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Product Details:"
                            android:textColor="#000"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:fontFamily="@font/textfont1"
                            android:textSize="20sp"/>

                        <LinearLayout
                            android:id="@+id/disc_linear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Discount:"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:text="---"
                                android:id="@+id/discount"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:id="@+id/linear_len"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Length"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="---"
                                android:textSize="15sp"
                                android:id="@+id/length"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:id="@+id/linear_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Color"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/color"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:id="@+id/linear_gen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Gender"
                                android:textSize="15sp"
                                android:textColor="@color/grey"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="---"
                                android:textSize="15sp"
                                android:id="@+id/gender"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:id="@+id/linear_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Type"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/type"
                                android:text="---"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"

                            />
                        <LinearLayout
                            android:id="@+id/linear_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Rating"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="---"
                                android:id="@+id/rating"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>

                        <LinearLayout
                            android:id="@+id/linear_mat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Material"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="---"
                                android:id="@+id/material"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                        <View
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/grey"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:fontFamily="@font/textfont1"
                                android:textStyle="bold"
                                android:text="Description:"
                                android:textColor="@color/grey"
                                android:textSize="15sp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingStart="10dp"
                                android:paddingEnd="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_marginBottom="15dp"
                                android:text="---"
                                android:id="@+id/description"
                                android:textSize="15sp"
                                android:textColor="#000"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>


        <LinearLayout

            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button

                android:text="ADD TO CART"
                android:background="#FFF"
                android:layout_width="0dp"
                android:gravity="center"
                android:textColor="#000"
                android:id="@+id/add_to_cart"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:text="BUY NOW"
                android:background="@color/buttoncolor"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="#000"
                android:gravity="center"
                android:id="@+id/buy_now"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>